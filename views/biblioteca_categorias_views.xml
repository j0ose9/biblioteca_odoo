<?xml version="1.0" ?>
<odoo>
  <record id="biblioteca_categorias_action" model="ir.actions.act_window">
    <field name="name">Categorías de libros</field>
    <field name="res_model">biblioteca.categorias</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Define las categorías de los libros aquí
      </p>
    </field>
  </record>

  <record id="biblioteca_categorias_view_form" model="ir.ui.view">
  <field name="name">biblioteca.categorias.form</field>
  <field name="model">biblioteca.categorias</field>
  <field name="arch" type="xml">
    <form string="Categorias">
      <sheet>
        <div class="oe_title">
          <h1><field name="nombre" placeholder="Categorías de libros"/></h1>
        </div>
      </sheet>
    </form>
  </field>
  </record>

</odoo>