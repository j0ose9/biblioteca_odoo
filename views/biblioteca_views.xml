<?xml version="1.0" ?>
<odoo>
  <record id="biblioteca_action" model="ir.actions.act_window">
    <field name="name">Autores de libros</field>
    <field name="res_model">biblioteca</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Define los autores de los libros aqu√≠
      </p>
    </field>
  </record>

  <record id="biblioteca_view_form" model="ir.ui.view">
  <field name="name">biblioteca.form</field>
  <field name="model">biblioteca</field>
  <field name="arch" type="xml">
    <form string="Autores">
      <sheet>
        <div class="oe_title">
          <h1><field name="nombre" placeholder="Autores de libros"/></h1>
        </div>
      </sheet>
    </form>  
  
  </field>
  </record>

</odoo>